<p style="color: green"><%= notice %></p>

<div class="bg-white p-6 rounded-lg shadow-lg">
  <h2 class="text-xl font-bold mb-4">Task List</h2>

  <ul class="list-none">
    <% @tasks.each do |task| %>
      <li class="flex items-center justify-between p-2 bg-gray-100 mb-2 rounded-lg">
        <span><%= task.name %></span>
        <div>
          <%= link_to "Show", task, class: "btn btn-sm btn-primary mr-2" %>
          <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-secondary mr-2" %>
          <%= link_to "Delete", task, data: { turbo_method: :delete }, class: "btn btn-sm btn-error" %>
        </div>
      </li>
    <% end %>
  </ul>

  <%= link_to 'New Task', new_task_path, class: "btn btn-primary mt-4" %>
</div>