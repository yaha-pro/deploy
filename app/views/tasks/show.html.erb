<div class="bg-white p-6 rounded-lg shadow-lg">
  <h2 class="text-xl font-bold mb-4">Task Details</h2>

  <div class="mb-4">
    <h3 class="text-lg font-semibold">Task Name</h3>
    <p class="text-gray-700"><%= @task.name %></p>
  </div>

  <div class="flex items-center">
    <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-secondary mr-2" %>
    <%= link_to 'Back to Task List', root_path, class: "btn btn-primary" %>
  </div>

  <div class="mt-4">
    <%= link_to "Delete", @task, data: { turbo_method: :delete }, class: "btn btn-sm btn-error" %>
  </div>
</div>